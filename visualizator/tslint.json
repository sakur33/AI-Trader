{
    "defaultSeverity": "error",
    "extends": [
      "tslint:recommended",
      "tslint-config-prettier"
    ],
    "linterOptions": {
      "exclude": [
        "node_modules/**",
        "**/*.json"
      ]
    },
    "rules": {
      "max-line-length": [
        true,
        100
      ],
      "indent": [
        true,
        "spaces",
        2
      ],
      "interface-name": false,
      "no-consecutive-blank-lines": false,
      "object-literal-sort-keys": false,
      "ordered-imports": false,
      "quotemark": [
        true,
        "single"
      ],
      "no-debugger": true,
      "max-classes-per-file": [
        true,
        2
      ],
      "ban": [
        true,
        {
          "name": [
            "describe",
            "only"
          ],
          "message": "don't focus tests"
        },
        {
          "name": "fdescribe",
          "message": "don't focus tests"
        },
        {
          "name": [
            "it",
            "only"
          ],
          "message": "don't focus tests"
        },
        {
          "name": "fit",
          "message": "don't focus tests"
        },
        {
          "name": [
            "test",
            "only"
          ],
          "message": "don't focus tests"
        },
        {
          "name": "ftest",
          "message": "don't focus tests"
        }
      ]
    }
  }